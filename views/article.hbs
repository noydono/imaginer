<section class="section">

    <div class="container" style="display:flex; flex-direction:column; align-items:center;">
        <img src="{{article.image}}" style="height: 50vh; ">
        <h1 class="title">{{stripTag article.title}}</h1>
        <p>{{stripTag article.content}}</p>
        <br>
        {{#if user}}

        <a href="/article/{{article._id}}/articleEditor"><button class="button is-primary">Editer</button></a>
        {{else}}
        {{/if}}

    </div>

    <br>

    <h1 class="title is-5">Commentaire</h1>

    <br>
    {{#each Coms }}

    <div class="card">

        <div class="card-content">

            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48">
                        <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                    </figure>
                </div>

                <div class="media-content">
                    <p class="title is-4"> {{name}}</p>
                </div>

            </div>



            <div class="content">

                <p>{{content}}</p>
                <time datetime="2016-1-1">Publier le {{moment createDate format = "DD-MM-YYYY"}} a
                    {{moment createDate format = "hh:m"}}</time>



                <a href="/commentaire/{{this._id}}">
                    {{#if isAdmin}}
                    <button class="btn btn-info">Effacer</button>
                    {{/if}}
                </a>


            </div>

        </div>

    </div>
    {{/each}}

    <br>

    <form method="POST" action="/commentaire/{{article._id}}">

        <div class="field columns">
            <div class="control column  is-four-fifths">
                <textarea name="content" class="textarea is-primary " placeholder="Primary textarea"></textarea>
            </div>

            <div class="control column">
                <button type="submit" class="button is-primary is-large">Envoyer</button>
            </div>

        </div>

    </form>




</section>