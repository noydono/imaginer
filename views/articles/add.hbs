<section class="section">
    <div class="container is-fullhd">

        <form method="post" action="/articles/post" enctype="multipart/form-data">

            <div class="field">

                <label for="" class="label">Titre de l'article</label>

                <div class="control">
                    <input type="text" class="input" name="title">
                </div>

            </div>

            <div class="field">

                <label for="" class="label">Contenu</label>

                <div class="control">
                    <textarea class="textarea" name="content"></textarea>
                    <script>
                        // Replace the <textarea id="editor1"> with a CKEditor
                        // instance, using default configuration.
                        CKEDITOR.replace('content');
                    </script>
                </div>

            </div>

            <div class="field">

                <label for="" class="label">Author</label>

                <div class="control">
                    <input type="text" class="input" name="author">
                </div>

            </div>

            <div class="file">
                <label class="file-label">
                    <input class="file-input" type="file" name="image">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Envoyer une image
                        </span>
                    </span>
                </label>
            </div>

            <div class="field is-grouped">

                <div class="control">
                    <button class="button is-link">Enregistrer</button>
                </div>

                <div class="control">
                    <button class="button is-text">Annuler</button>
                </div>

            </div>

        </form>
    </div>
</section>